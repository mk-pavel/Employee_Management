package employeemanagment;
import java.util.Scanner;
import javax.swing.JOptionPane;

public class Daffodil {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        String setuser = "14643";
        String setpass = "1234";
        System.out.println("*****************************************************");
        System.out.print("Enter your ID : ");
        String user = sc.nextLine();
        System.out.print("Enter Password : ");
        String pass = sc.nextLine();
        System.out.println("*****************************************************");
        System.out.println("\n");

        DaffodilCse myDaffodil = new DaffodilCse("CSE");
        Scanner scan = new Scanner(System.in);
        if (user.equals(setuser) && pass.equals(setpass)) {
            UI choice = new UI();
            while (true) {
                choice.option();
                int op = scan.nextInt();
               
                if (op == 1) {
                    while (true) {
                        choice.subEmployeeOption();
                        int subOp = scan.nextInt();
                        if (subOp == 1) {
                            System.out.println("Enter new Employee : ");
                            scan.nextLine();
                            System.out.print("Name : ");
                            String n = scan.nextLine();
                            System.out.print("ID : ");
                            String i = scan.nextLine();
                            System.out.print("Designation : ");
                            String d = scan.nextLine();
                            System.out.print("Salary : ");
                            double s = scan.nextDouble();
                            myDaffodil.addNewEmployee(n, i, d, s);
                            break;
                        } else if (subOp == 2) {
                            System.out.println("Enter new Employee Name : ");
                            scan.nextLine();
                            System.out.println("Name : ");
                            String n = scan.nextLine();
                            System.out.println("ID : ");
                            String i = scan.nextLine();
                            System.out.println("Designation : ");
                            String d = scan.nextLine();
                            System.out.println("Hourly Rate : ");
                            double hr = scan.nextDouble();
                            System.out.println("Hourly Work : ");
                            int hw = scan.nextInt();
                            myDaffodil.addNewEmployee(n, i, d, hr, hw);
                            break;
                        } else {
                            System.out.println("Wrong key pressed! Please try again.");
                        }
                    }
                } else if (op == 2) {
                    System.out.println("Enter employee's ID: ");
                    String i = scan.next();
                    double s = myDaffodil.getSalary(i);
                    if (s != -1) {
                        System.out.println(s);
                    }
                } else if (op == 3) {
                    System.out.println("Enter Emplyee ID : ");
                    String i = scan.next();
                    System.out.println("The Amount need to be Rised : ");
                    double d = scan.nextDouble();
                    try {
                        myDaffodil.increaseSalary(i, d);
                    } catch (InvalidSalaryException e) {
                        JOptionPane.showMessageDialog(null, e.getMessage());                
                    }
                } else if (op == 4) {
                    System.out.println("Enter employee's ID: ");
                    String i = scan.next();
                    myDaffodil.display(i);
                } else if (op == 5) {
                    myDaffodil.display();
                } else if (op == 0) {
                    break;
                } else {
                    System.out.println("Wrong key pressed! Please try again.");
                }
            }

        } else {
            System.out.println("Invalid User");
        }
    }

}
